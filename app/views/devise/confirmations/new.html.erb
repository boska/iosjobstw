<h4><%= t('.resend_confirmation_instructions', :default => "Resend confirmation instructions") %></h4>
<%= bootstrap_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-6") do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email, label:t(:email)%>
  <%= f.form_group do %>
    <%=  f.submit t('.resend_confirmation_instructions', :default => "Resend confirmation instructions"), class: "btn btn-success" %>
  <% end %>
<% end %>
<%= render "devise/shared/links" %>
