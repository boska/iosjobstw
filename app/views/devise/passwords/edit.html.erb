<h4><%= t('.change_your_password', :default => "Change your password") %></h4>
<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-6") do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password ,label:t(:password)%>
  <%= f.password_field :password_confirmation ,label:t(:password_confirmation)%>
  <%= f.form_group do %>
    <%=  f.submit t('.change_my_password', :default => "Change my password"), class: "btn btn-success" %>
  <% end %>
<% end %>
<%= render "devise/shared/links" %>
