<h4><%= t('.forgot_your_password', :default => "Forgot your password?") %></h4>
<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-6") do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email,label:t(:email) %>
  <%= f.form_group do %>
    <%=  f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-success" %>
  <% end %>
<% end %>
<%= render "devise/shared/links" %>
