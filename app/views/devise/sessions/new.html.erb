<h4><%= t('.sign_in', :default => "Sign in") %></h4>
<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-6") do |f| %>
  <%= f.email_field :email ,label:t(:email)%>
  <%= f.password_field :password ,label:t(:password)%>
  <% if devise_mapping.rememberable? -%>
    <%= f.form_group :remember_me do %>
      <%= f.check_box :remember_me,label:t(:remember_me) %>
    <% end %>
  <% end -%>
  <%= f.form_group do %>
    <%=  f.submit t('.sign_in', :default => "Sign in"), class: "btn btn-success" %>
  <% end %>
<% end %>
<%= render "devise/shared/links" %>
