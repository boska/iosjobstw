<h4><%= t('.sign_up', :default => "Sign up") %></h4>
<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), layout: :horizontal, label_col: "col-sm-4", control_col: "col-sm-6") do |f| %>
  <%= devise_error_messages! %>
  <%= f.email_field :email ,label:t(:email)%>
  <%= f.password_field :password,label:t(:password) %>
  <%= f.password_field :password_confirmation,label:t(:password_confirmation) %>
  <%= f.form_group do %>
    <%=  f.submit t(:registration), class: "btn btn-success" %>
  <% end %>
<% end %>
<%= render "devise/shared/links" %>
