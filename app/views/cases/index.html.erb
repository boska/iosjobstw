<%- model_class = Case -%>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <%# Posted Job Title Company Name  Location %>
      <th>張貼日期</th>
      <th>工作職稱</th>
      <th>公司名稱</th>
      <th>工作地點</th>
    </tr>
  </thead>
  <tbody>
    <% @cases.each do |c| %>
      <tr>
        <td><%= l c.created_at, format: :short %></td>
        <td><%= link_to( c.name , case_path(c) )%></td>
        <td><%= c.name %></td>
        <td><%= c.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% content_for :opengraph_meta_tags do %>
  <meta property="og:title" content="iOSjobs.tw">
  <meta property="og:url" content="http://iosjobs.tw">
  <meta property="og:image" content="http://i.imgur.com/mIK2vIe.jpg">
  <meta property="og:description" content="iOS Jobs Taiwan">
<% end %>
