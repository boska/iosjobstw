<%- model_class = Case -%>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <%# Posted Job Title Company Name  Location %>
      <th class="col-md-2">張貼日期</th>
      <th>專案名稱</th>
      <th class="col-md-1">預算</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cases.each do |cas| %>
      <tr>
        <td><%= l cas.created_at, format: :short %></td>
        <td><%= link_to( cas.name , case_path(cas) )%><br><%= cas.description  %></td>
        <td><%= number_to_currency(cas.lower_bound) %></td>
        <td colspan="2"><%= "~#{number_to_currency(cas.upper_bound)}" if cas.upper_bound.present? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% content_for :opengraph_meta_tags do %>
  <meta property="og:title" content="iOSjobs.tw">
  <meta property="og:url" content="http://iosjobs.tw">
  <meta property="og:image" content="http://i.imgur.com/mIK2vIe.jpg">
  <meta property="og:description" content="iOS Jobs Taiwan">
<% end %>
