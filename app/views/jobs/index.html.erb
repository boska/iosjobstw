<%- model_class = Job -%>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <%# Posted Job Title Company Name  Location %>
      <th>張貼日期</th>
      <th>工作職稱</th>
      <th>公司名稱</th>
      <th>工作地點</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= l job.created_at, format: :short %></td>
        <td><%= link_to( job.job_title , job_path(job) )%></td>
        <td><%= job.company_name %></td>
        <td><%= job.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @jobs %>
