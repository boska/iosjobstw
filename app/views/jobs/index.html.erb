<%- model_class = Job -%>
<table class="table table-striped">
  <thead>
    <tr>
      <%# Posted Job Title Company Name  Location %>
      <th>Posted</th>
      <th>Job Title</th>
      <th>Company Name</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= l job.created_at, format: :short %></td>
        <td><%= link_to( job.job_title , job_path(job) )%></td>
        <td><%= job.company_name %></td>
        <td><%= job.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @jobs %>
